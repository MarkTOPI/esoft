<Page x:Class="ESoft.Buttons"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ESoft"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Buttons" Background="Snow">

    <Grid VerticalAlignment="Center" Width="300px">
        <Button x:Name="ClientBtn" Content="Клиент" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" FontSize="20px" FontWeight="Bold" Background="Transparent" BorderBrush="Transparent" Click="ClientBtn_Click"/>
        <Button x:Name="RieltorBtn" Content="Риэлтор" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2" FontSize="20px" FontWeight="Bold" Background="Transparent" BorderBrush="Transparent" Click="RieltorBtn_Click"/>
        <Button x:Name="ObjectBtn" Content="Объект" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="3" FontSize="20px" FontWeight="Bold" Background="Transparent" BorderBrush="Transparent" Click="ObjectBtn_Click"/>
    </Grid>
</Page>
